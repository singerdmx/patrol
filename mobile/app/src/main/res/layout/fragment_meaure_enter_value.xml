    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/range"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pointCodeLine"
        android:background="@color/FloralWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/normal_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".50"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/normal_range"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/normal_range_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".50"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/range"
        android:background="@color/FloralWhite"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".50"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/enter_value"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/value"
            android:layout_width="0dp"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".50"
            android:autoText="false"
            android:inputType="text"
            android:maxLength="10"
            android:maxLines="1"
            android:numeric="decimal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:singleLine="true" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/memo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:background="@color/FloralWhite"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/memo_label"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/add_memo_photo"
            android:layout_alignLeft="@+id/add_memo_photo"
            android:layout_alignRight="@+id/add_memo_photo"
            android:layout_alignStart="@+id/add_memo_photo"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/memo"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_memo_photo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memo_label"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/background_cyan"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp"
            android:text="@string/add_photo"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/memo_value"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/add_memo_photo"
            android:autoText="false"
            android:inputType="textMultiLine"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:singleLine="true" />

    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memo"
        android:background="@color/FloralWhite"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recordLine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLine"
        android:background="@color/FloralWhite"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:background="@drawable/background_cyan"
            android:clickable="true"
            android:drawableTop="@drawable/ic_btn_speak_now"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/record_voice"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:background="@drawable/background_cyan"
            android:clickable="true"
            android:drawableTop="@drawable/ic_media_play"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/play"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/delete_recording"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:background="@drawable/background_cyan"
            android:clickable="true"
            android:drawableTop="@drawable/ic_menu_delete"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/delete_recording"
            android:textColor="@color/white"></TextView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/show_graph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recordLine"
        android:background="@color/FloralWhite"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_graph_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/background_cyan"
            android:clickable="true"
            android:drawableLeft="@drawable/bargraph"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp"
            android:text="@string/historical_data_graph"
            android:textColor="@color/white"></TextView>
    </LinearLayout>
</RelativeLayout>